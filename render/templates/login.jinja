{% from "macros/header.jinja" import header with context %}
{% from "macros/button.jinja" import submitButton with context %}
{% from "macros/usernamePasswordForm.jinja" import usernamePasswordForm with context %}

<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tom Car Sales - Login</title>

    <link rel="stylesheet" href={{ url_for("static",filename="app.css" ) }}>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="p-3">

    {% if session["loggedIn"] %}
      <form action="{{ url_for('apiAuth.logout') }}"
            method="post"
            id="logoutForm">
      </form>

      <script>document.getElementById("logoutForm").submit();</script>
    {% else %}
      {{ header() }}

      <div class="flex flex-col gap-5 items-center justify-center">
        {{ usernamePasswordForm("apiAuth.login", "Login") }}
        {{ usernamePasswordForm("apiAuth.create", "Signup") }}
      </div>
    {% endif %}
  </body>
</html>
